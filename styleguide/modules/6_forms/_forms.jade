h2.huge-module__title=name
form.snippet
  fieldset
  
    .row
      .medium-6.column
        label First Name
        input(type='text', placeholder="Enter first name")
      .medium-6.column
        label Last Name
        input(type='text', placeholder="Enter last name")
        
    .row
      .medium-6.column
        label Email
        input(type='email', placeholder="Enter email")
      .medium-6.column
        label Password
        input#password-field.form-control(type='password', name='password', value='password')
        span.fa.fa-fw.fa-eye.field-icon.toggle-password(toggle='#password-field')
  
    .row 
      .medium-6.column
        label Gender
        span
          select
            option Male
            option Female
    
    .row
      .medium-6.column
        label Date
        input(type='Date', placeholder="")
      .medium-6.column
        label Textarea
        textarea(cols='30', rows='5') Enter text here...
    
    .row
      .medium-6.column
        label Telephone Number
        input(class='phone', type="text")
        
    .row
      .medium-6.column
        label Disabled
        input(type='disabled', placeholder="I am not editable", disabled="", value="Disabled")
      .medium-6.column
        label File input
        .upload-btn-wrapper
          button.button.button-small Upload
          input(type='file')
          label Choose a file

    .row
      .medium-6.column
        label With helptext
        input.sample(type='text', placeholder="")
        label.helptext This is help or error text
        
      .medium-6.column
        label
          input#opt1.hidden-xs-up(type='radio', name='rdo')
          label.radio(for='opt1')
          span.rlabel(for='opt1') Left
          input#opt2.hidden-xs-up(type='radio', name='rdo')
          label.radio(for='opt2')
          span.rlabel(for='opt2') Right
        label
          input#cbx.hidden-xs-up(type="checkbox")
          label.cbx(for="cbx")
          span.lbl(for="cbx") Checkbox input
    .row
